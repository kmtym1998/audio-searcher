extend type Query {
  audioFileNodes: [AudioFileNode!]!
}

input SearchInput {
  query: QueryInput!
  limit: Int
  offset: Int
}

input QueryInput {
  fileName: String
  artists: [String!]
  albumArtist: String
  album: String
  title: String
  tags: [String!]
  tracks: [String!]
}

type AudioFileNode {
  id: String!
  filePath: String!
  fileName: String!
  artists: [String!]!
  albumArtist: String!
  album: String!
  title: String!
  tags: [String!]!
  containedTracks: [String!]!
}
